  "platformId": "vscode-copilot",
  "adapterVersion": "1.2.0",
  "lastUpdated": "2026-02-04",
  "toolNaming": {
    "overview": "VS Code Copilot uses a three-tier tool naming system.",
    "tiers": {
      "toolSet": {
        "description": "Tool set name used in frontmatter to select all tools in the set.",
        "example": "execute",
        "usage": "tools: ['execute']"
      },
      "qualifiedName": {
        "description": "Qualified name used in frontmatter to select individual tools.",
        "pattern": "<toolSet>/<camelCaseName>",
        "example": "execute/runInTerminal",
        "usage": "tools: ['execute/runInTerminal']"
      },
      "functionName": {
        "description": "Snake_case function name used in API calls and model prompts.",
        "example": "run_in_terminal",
        "usage": "Model calls this name when invoking the tool"
      }
    },
    "chatMentions": "Tools are mentioned in chat with # (e.g., #codebase, #problems).",
    "rule": "Use toolSet name to include all tools, or qualifiedName to include specific tools. The functionName is resolved automatically at runtime."
  },
  "toolSets": [
    {
      "id": "search",
      "description": "Search the workspace (codebase, changes, usages, text/file search).",
      "tools": [
        "search/codebase",
        "search/fileSearch",
        "search/textSearch",
        "search/searchResults",
        "search/changes",
        "search/usages"
      ]
    },
    {
