{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://agnostic-prompt-standard.dev/schemas/tools-registry.schema.json",
  "title": "APS Platform Tool Registry",
  "type": "object",
  "required": [
    "platformId",
    "adapterVersion",
    "tools"
  ],
  "properties": {
    "platformId": {
      "type": "string",
      "minLength": 1
    },
    "adapterVersion": {
      "type": "string",
      "minLength": 1
    },
    "lastUpdated": {
      "type": "string",
      "minLength": 1
    },
    "toolNaming": {
      "type": "object",
      "properties": {
        "overview": {
          "type": "string"
        },
        "tiers": {
          "type": "object",
          "properties": {
            "toolSet": {
              "type": "object",
              "properties": {
                "description": { "type": "string" },
                "example": { "type": "string" },
                "usage": { "type": "string" }
              }
            },
            "qualifiedName": {
              "type": "object",
              "properties": {
                "description": { "type": "string" },
                "pattern": { "type": "string" },
                "example": { "type": "string" },
                "usage": { "type": "string" }
              }
            },
            "functionName": {
              "type": "object",
              "properties": {
                "description": { "type": "string" },
                "example": { "type": "string" },
                "usage": { "type": "string" }
              }
            }
          }
        },
        "chatMentions": {
          "type": "string"
        },
        "rule": {
          "type": "string"
        }
      },
      "additionalProperties": true
    },
    "toolSets": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "id",
          "description"
        ],
        "properties": {
          "id": {
            "type": "string",
            "description": "The tool set name used in frontmatter (e.g., 'execute', 'search')."
          },
          "description": {
            "type": "string"
          },
          "tools": {
            "type": "array",
            "items": {
              "type": "string"
            },
            "description": "List of qualified tool names in this set."
          }
        },
        "additionalProperties": false
      }
    },
    "tools": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "qualifiedName",
          "functionName",
          "description",
          "risk",
          "sideEffects"
        ],
        "properties": {
          "toolSet": {
            "type": ["string", "null"],
            "description": "The tool set this tool belongs to, or null for standalone tools."
          },
          "qualifiedName": {
            "type": "string",
            "description": "The name used in frontmatter to select this specific tool (e.g., 'execute/runInTerminal')."
          },
          "functionName": {
            "type": "string",
            "description": "The snake_case function name used by the model at runtime (e.g., 'run_in_terminal')."
          },
          "mention": {
            "type": "string",
            "description": "The chat mention syntax (e.g., '#runInTerminal')."
          },
          "description": {
            "type": "string"
          },
          "risk": {
            "type": "string",
            "enum": [
              "low",
              "medium",
              "high"
            ]
          },
          "sideEffects": {
            "type": "string",
            "enum": [
              "none",
              "reads",
              "writes",
              "executes",
              "network",
              "mixed"
            ]
          },
          "parameters": {
            "type": "object",
            "additionalProperties": {
              "type": "object",
              "properties": {
                "type": { "type": "string" },
                "required": { "type": "boolean" },
                "enum": {
                  "type": "array",
                  "items": { "type": "string" }
                },
                "format": { "type": "string" },
                "description": { "type": "string" }
              }
            },
            "description": "Tool parameters with their types and requirements."
          },
          "notes": {
            "type": "string"
          }
        },
        "additionalProperties": false
      }
    },
    "recommended": {
      "type": "object",
      "additionalProperties": {
        "type": "object",
        "additionalProperties": {
          "type": "array",
          "items": {
            "type": "string"
          }
        }
      }
    }
  },
  "additionalProperties": false
}