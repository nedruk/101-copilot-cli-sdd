{
  "platformId": "claude-code",
  "adapterVersion": "1.2.0",
  "lastUpdated": "2026-02-04",
  "toolNaming": {
    "overview": "Claude Code uses a single-tier tool naming system.",
    "tiers": {
      "toolSet": {
        "description": "Logical grouping of tools (not used in frontmatter).",
        "example": "filesystem",
        "usage": "For documentation and organization only"
      },
      "qualifiedName": {
        "description": "The exact tool name used in frontmatter and at runtime.",
        "pattern": "PascalCase",
        "example": "Read",
        "usage": "tools: Read, Write, Edit"
      },
      "functionName": {
        "description": "Same as qualifiedName for Claude Code.",
        "example": "Read",
        "usage": "Model calls this name when invoking the tool"
      }
    },
    "mcpTools": "MCP tools use pattern: mcp__<server>__<tool>",
    "rule": "Use the exact tool name. No qualification or prefixes needed. Tools are comma-separated strings in frontmatter."
  },
  "toolSets": [
    {
      "id": "filesystem",
      "description": "File system operations (read, write, edit, search).",
      "tools": [
        "Read",
        "Write",
        "Edit",
        "Glob",
        "Grep",
        "NotebookEdit"
      ]
    },
    {
      "id": "execution",
      "description": "Command execution and task management.",
      "tools": [
        "Bash",
        "Task",
        "TaskOutput",
        "TaskStop",
        "TaskCreate",
        "TaskUpdate",
        "TaskList",
        "TaskGet",
        "MCPSearch"
      ]
    },
    {
      "id": "web",
      "description": "Web fetching and search operations.",
      "tools": [
        "WebFetch",
        "WebSearch"
      ]
    },
    {
      "id": "interaction",
      "description": "User interaction and questions.",
      "tools": [
        "AskUserQuestion"
      ]
    },
    {
      "id": "planning",
      "description": "Planning mode tools.",
      "tools": [
        "EnterPlanMode",
        "ExitPlanMode"
      ]
    },
    {
      "id": "skills",
      "description": "Skill and slash command execution.",
      "tools": [
        "Skill"
      ]
    },
    {
      "id": "code_intelligence",
      "description": "Code analysis and navigation tools.",
      "tools": [
        "LSP"
      ]
    }
  ],
  "tools": [
    {
      "toolSet": "filesystem",
      "qualifiedName": "Read",
      "functionName": "Read",
      "mention": "Read",
      "description": "Read file contents from the local filesystem. Supports text files, images, PDFs, and Jupyter notebooks.",
      "risk": "low",
      "sideEffects": "reads",
      "parameters": {
        "file_path": { "type": "string", "required": true },
        "offset": { "type": "integer", "required": false },
        "limit": { "type": "integer", "required": false },
        "pages": { "type": "string", "required": false }
      },
      "notes": "Can read any file type. Images and PDFs are processed visually. Use offset/limit for large files, pages for PDFs."
    },
    {
      "toolSet": "filesystem",
      "qualifiedName": "Write",
      "functionName": "Write",
      "mention": "Write",
      "description": "Create or overwrite files on the local filesystem.",
      "risk": "medium",
      "sideEffects": "writes",
      "parameters": {
        "file_path": { "type": "string", "required": true },
        "content": { "type": "string", "required": true }
      },
      "notes": "Requires reading the file first if it exists. Prefer Edit for existing files."
    },
    {
      "toolSet": "filesystem",
      "qualifiedName": "Edit",
      "functionName": "Edit",
      "mention": "Edit",
      "description": "Perform exact string replacements in existing files.",
      "risk": "medium",
      "sideEffects": "writes",
      "parameters": {
        "file_path": { "type": "string", "required": true },
        "old_string": { "type": "string", "required": true },
        "new_string": { "type": "string", "required": true },
        "replace_all": { "type": "boolean", "required": false }
      },
      "notes": "Requires reading the file first. Fails if old_string is not unique. Use replace_all for global replacement."
    },
    {
      "toolSet": "filesystem",
      "qualifiedName": "Glob",
      "functionName": "Glob",
      "mention": "Glob",
      "description": "Find files by glob pattern matching.",
      "risk": "low",
      "sideEffects": "reads",
      "parameters": {
        "pattern": { "type": "string", "required": true },
        "path": { "type": "string", "required": false }
      },
      "notes": "Faster than find command. Returns paths sorted by modification time."
    },
    {
      "toolSet": "filesystem",
      "qualifiedName": "Grep",
      "functionName": "Grep",
      "mention": "Grep",
      "description": "Search file contents using regular expressions (built on ripgrep).",
      "risk": "low",
      "sideEffects": "reads",
      "parameters": {
        "pattern": { "type": "string", "required": true },
        "path": { "type": "string", "required": false },
        "glob": { "type": "string", "required": false },
        "type": { "type": "string", "required": false },
        "output_mode": { "type": "string", "required": false, "enum": ["content", "files_with_matches", "count"] },
        "multiline": { "type": "boolean", "required": false },
        "-i": { "type": "boolean", "required": false },
        "-n": { "type": "boolean", "required": false },
        "-A": { "type": "integer", "required": false },
        "-B": { "type": "integer", "required": false },
        "-C": { "type": "integer", "required": false },
        "head_limit": { "type": "integer", "required": false },
        "offset": { "type": "integer", "required": false }
      },
      "notes": "Supports full regex syntax. Use glob for file filtering, type for language types (js, py, etc.)."
    },
    {
      "toolSet": "filesystem",
      "qualifiedName": "NotebookEdit",
      "functionName": "NotebookEdit",
      "mention": "NotebookEdit",
      "description": "Replace, insert, or delete cells in Jupyter notebooks.",
      "risk": "medium",
      "sideEffects": "writes",
      "parameters": {
        "notebook_path": { "type": "string", "required": true },
        "new_source": { "type": "string", "required": true },
        "cell_id": { "type": "string", "required": false },
        "cell_type": { "type": "string", "required": false, "enum": ["code", "markdown"] },
        "edit_mode": { "type": "string", "required": false, "enum": ["replace", "insert", "delete"] }
      },
      "notes": "Use edit_mode=insert to add cells, edit_mode=delete to remove. cell_id identifies the target cell."
    },
    {
      "toolSet": "execution",
      "qualifiedName": "Bash",
      "functionName": "Bash",
      "mention": "Bash",
      "description": "Execute bash commands in a persistent shell session.",
      "risk": "high",
      "sideEffects": "executes",
      "parameters": {
        "command": { "type": "string", "required": true },
        "description": { "type": "string", "required": false },
        "timeout": { "type": "integer", "required": false },
        "run_in_background": { "type": "boolean", "required": false }
      },
      "notes": "Use for git, npm, docker, etc. Avoid for file operations (use Read/Write/Edit). Working directory persists."
    },
    {
      "toolSet": "execution",
      "qualifiedName": "Task",
      "functionName": "Task",
      "mention": "Task",
      "description": "Launch specialized subagents for complex multi-step tasks.",
      "risk": "medium",
      "sideEffects": "mixed",
      "parameters": {
        "description": { "type": "string", "required": true },
        "prompt": { "type": "string", "required": true },
        "subagent_type": { "type": "string", "required": true },
        "model": { "type": "string", "required": false, "enum": ["sonnet", "opus", "haiku"] },
        "run_in_background": { "type": "boolean", "required": false },
        "resume": { "type": "string", "required": false },
        "max_turns": { "type": "integer", "required": false }
      },
      "notes": "Subagent types: Bash, general-purpose, Explore, Plan, and custom agents. Use model param to control cost/latency."
    },
    {
      "toolSet": "execution",
      "qualifiedName": "TaskOutput",
      "functionName": "TaskOutput",
      "mention": "TaskOutput",
      "description": "Retrieve output from a running or completed background task.",
      "risk": "low",
      "sideEffects": "reads",
      "parameters": {
        "task_id": { "type": "string", "required": true },
        "block": { "type": "boolean", "required": false },
        "timeout": { "type": "integer", "required": false }
      },
      "notes": "Use block=true to wait for completion, block=false for status check."
    },
    {
      "toolSet": "execution",
      "qualifiedName": "TaskStop",
      "functionName": "TaskStop",
      "mention": "TaskStop",
      "description": "Stop a running background task by its ID.",
      "risk": "low",
      "sideEffects": "executes",
      "parameters": {
        "task_id": { "type": "string", "required": true },
        "shell_id": { "type": "string", "required": false, "description": "Deprecated: use task_id instead" }
      },
      "notes": "Use when you need to terminate a long-running background task."
    },
    {
      "toolSet": "execution",
      "qualifiedName": "TaskCreate",
      "functionName": "TaskCreate",
      "mention": "TaskCreate",
      "description": "Create a new task in the structured task list for tracking progress.",
      "risk": "low",
      "sideEffects": "none",
      "parameters": {
        "subject": { "type": "string", "required": true },
        "description": { "type": "string", "required": true },
        "activeForm": { "type": "string", "required": false },
        "metadata": { "type": "object", "required": false }
      },
      "notes": "Use for complex multi-step tasks. Subject is imperative form, activeForm is present continuous for spinner."
    },
    {
      "toolSet": "execution",
      "qualifiedName": "TaskUpdate",
      "functionName": "TaskUpdate",
      "mention": "TaskUpdate",
      "description": "Update an existing task's status, details, or dependencies.",
      "risk": "low",
      "sideEffects": "none",
      "parameters": {
        "taskId": { "type": "string", "required": true },
        "status": { "type": "string", "required": false, "enum": ["pending", "in_progress", "completed", "deleted"] },
        "subject": { "type": "string", "required": false },
        "description": { "type": "string", "required": false },
        "activeForm": { "type": "string", "required": false },
        "owner": { "type": "string", "required": false },
        "metadata": { "type": "object", "required": false },
        "addBlocks": { "type": "array", "required": false },
        "addBlockedBy": { "type": "array", "required": false }
      },
      "notes": "Status workflow: pending → in_progress → completed. Use 'deleted' to permanently remove."
    },
    {
      "toolSet": "execution",
      "qualifiedName": "TaskList",
      "functionName": "TaskList",
      "mention": "TaskList",
      "description": "List all tasks in the current task list with their status and dependencies.",
      "risk": "low",
      "sideEffects": "reads",
      "notes": "Returns summary of each task including id, subject, status, owner, and blockedBy dependencies."
    },
    {
      "toolSet": "execution",
      "qualifiedName": "TaskGet",
      "functionName": "TaskGet",
      "mention": "TaskGet",
      "description": "Get full details of a specific task by its ID.",
      "risk": "low",
      "sideEffects": "reads",
      "parameters": {
        "taskId": { "type": "string", "required": true }
      },
      "notes": "Returns complete task details including description and dependency information."
    },
    {
      "toolSet": "execution",
      "qualifiedName": "MCPSearch",
      "functionName": "MCPSearch",
      "mention": "MCPSearch",
      "description": "Search for and load MCP tools when MCP tool search is enabled.",
      "risk": "low",
      "sideEffects": "reads",
      "notes": "Only available when MCP servers are configured and tool search is enabled. Discovers available MCP tools dynamically."
    },
    {
      "toolSet": "web",
      "qualifiedName": "WebFetch",
      "functionName": "WebFetch",
      "mention": "WebFetch",
      "description": "Fetch content from a URL and process it with a prompt.",
      "risk": "medium",
      "sideEffects": "network",
      "parameters": {
        "url": { "type": "string", "required": true },
        "prompt": { "type": "string", "required": true }
      },
      "notes": "Converts HTML to markdown. Has 15-minute cache. Will fail for authenticated URLs."
    },
    {
      "toolSet": "web",
      "qualifiedName": "WebSearch",
      "functionName": "WebSearch",
      "mention": "WebSearch",
      "description": "Search the web and return results.",
      "risk": "medium",
      "sideEffects": "network",
      "parameters": {
        "query": { "type": "string", "required": true },
        "allowed_domains": { "type": "array", "required": false },
        "blocked_domains": { "type": "array", "required": false }
      },
      "notes": "Must include Sources section with URLs after answering. Supports domain filtering."
    },
    {
      "toolSet": "interaction",
      "qualifiedName": "AskUserQuestion",
      "functionName": "AskUserQuestion",
      "mention": "AskUserQuestion",
      "description": "Ask the user questions to gather preferences, clarify instructions, or get decisions.",
      "risk": "low",
      "sideEffects": "none",
      "parameters": {
        "questions": { "type": "array", "required": true, "description": "Array of question objects with question, header, options, and multiSelect" },
