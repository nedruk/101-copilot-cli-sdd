    {
      "toolSet": "planning",
      "qualifiedName": "ExitPlanMode",
      "functionName": "ExitPlanMode",
      "mention": "ExitPlanMode",
      "description": "Signal plan completion and request user approval.",
      "risk": "low",
      "sideEffects": "none",
      "parameters": {
        "allowedPrompts": { "type": "array", "required": false, "description": "Bash command permissions to request" },
        "pushToRemote": { "type": "boolean", "required": false },
        "remoteSessionId": { "type": "string", "required": false },
        "remoteSessionTitle": { "type": "string", "required": false },
        "remoteSessionUrl": { "type": "string", "required": false }
      },
      "notes": "Can request bash command permissions via allowedPrompts. Reads plan from previously written plan file."
    }
