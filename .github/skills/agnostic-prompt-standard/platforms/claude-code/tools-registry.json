    },
    {
      "toolSet": "skills",
      "qualifiedName": "Skill",
      "functionName": "Skill",
      "mention": "Skill",
      "description": "Execute a skill (slash command) within the conversation.",
      "risk": "medium",
      "sideEffects": "mixed",
      "parameters": {
        "skill": { "type": "string", "required": true },
        "args": { "type": "string", "required": false }
      },
      "notes": "Used for slash commands like /commit, /review-pr. Use fully qualified name for namespaced skills."
